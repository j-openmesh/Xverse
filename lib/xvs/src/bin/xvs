#! /usr/bin/env nix-shell
#! nix-shell -i bash -p bash -p gnumake -p peru

set -e
set -u
set -x
__XVS_SYSTEM_BUILDER_PATH="$(which make)"
__XVS_SYSTEM_RUNTIME_TARGET="universe"
__XVS_SYSTEM_BUILDER_PROGRAM_PATH="${__XVERSE_PROJECT_PATH}/Makefile"
exec "${__XVS_SYSTEM_BUILDER_PATH}" -s -f "${__XVS_SYSTEM_BUILDER_PROGRAM_PATH}" -C "${__XVERSE_PROJECT_PATH}" "${__XVS_SYSTEM_RUNTIME_TARGET}"
