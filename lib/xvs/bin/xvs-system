#! /usr/bin/env sh
__XVS_EXECUTABLE_RUNTIME_NAME="xvs"
__XVS_EXECUTABLE_RUNTIME_BOOTSTRAP_NAME="xvs-bootstrap"

__XVS_PROJECT_BIN_PATH=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

__XVS_PROJECT_PATH="${__SH_OPNM_XVERSE_LIB_XVS_PROJECT_BIN_PATH}/.."

__XVS_PROJECT_OUT_PATH="${__SH_OPNM_XVERSE_LIB_XVS_PROJECT_PATH/out"
__XVS_PROJECT_LIB_PATH="${__SH_OPNM_XVERSE_LIB_XVS_PROJECT_PATH/lib"

__XVS_PROJECT_LIB_BOOTSTRAP_PATH="${__XVS_PROJECT_LIB_BOOTSTRAP_PATH/bootstrap"
__XVS_PROJECT_OUT_BIN_PATH="${__XVS_PROJECT_OUT_PATH}/bin"

__XVS_EXECUTABLE_RUNTIME_PATH="${__XVS_PROJECT_OUT_BIN_PATH/${__XVS_EXECUTABLE_RUNTIME_NAME}"
__XVS_EXECUTABLE_RUNTIME_BOOTSTRAP_PATH="${__XVS_PROJECT_LIB_BOOTSTRAP_PATH/${__XVS_EXECUTABLE_RUNTIME_BOOTSTRAP_NAME}"

if [ -e ${__XVS_EXECUTABLE_RUNTIME_PATH} ]
then
  exec ${__XVS_EXECUTABLE_RUNTIME_PATH}
else
  exec ${__XVS_EXECUTABLE_RUNTIME_BOOTSTRAP_PATH}
fi
